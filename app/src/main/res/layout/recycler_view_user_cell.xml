<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/spacer_md"
    android:layout_marginLeft="@dimen/spacer_sm"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_recyvlerViewDetail_photo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/user_photo"
        android:layout_marginRight="@dimen/spacer_sm"
        android:layout_marginEnd="@dimen/spacer_sm"
        android:layout_marginBottom="@dimen/spacer_sm"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_width="0dp"
        app:civ_border_color="#00000000"
        />

    <!--full name-->
    <TextView
        android:id="@+id/textView_recyclerViewDetail_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacer_sm"
        android:layout_marginEnd="@dimen/spacer_sm"
        android:layout_marginTop="@dimen/spacer_sm"
        android:textSize="@dimen/text_font_size_regular"
        android:ellipsize="end"
        android:layout_toRightOf="@id/imageView_recyvlerViewDetail_photo"
        android:layout_toEndOf="@id/imageView_recyvlerViewDetail_photo"
        android:layout_alignTop="@id/imageView_recyvlerViewDetail_photo"
        />

</RelativeLayout>